                                      ;; to fix the editor issue when commiting
                                      ;; git-commit

                                      ;; call all-the-icons-install-fonts to install the fonts on the system
                                      ;; all-the-icons

                                      ;; not used in favour of 'uv'
                                      ;; poetry
                                      ;; protobuf-mode
                                      ;; eval-sexp-fu
                                      virtualenvwrapper
                                      ob-restclient
                                      ob-graphql
